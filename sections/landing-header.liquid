<!-- header: section -->
<!-- {%- assign default_title = 'From problem to solution.' -%}
{%- assign default_desc = 'A creative and strategic transformation partner for bold businesses.' -%}
{%- assign default_button = 'READ MORE' -%} -->
<section class="pt-5" id="header">
    <div class="row ">
        <div class="col-sm-12 col-lg-6 col-md-6 order-xs-last order-first img-container">

            <img src={{section.settings.header_image | img_url: '500x500'}} alt="about us">


        </div>
        <div class="col-sm-12 col-lg-6 col-md-6 h-container align-self-center order-xs-first order-last">
            <h3 class=" header-title">{{section.settings.header_title }}</h3>

            <h1 class="header-content">
                {{section.settings.header_desc }}
            </h1>

            <button class="btn readmore-btn">{{section.settings.header_button }}</button>
        </div>
    </div>

</section>


{% schema %}

{
"name": "Header",
"settings": [
{
"type": "image_picker",
"id": "header_image",
"label": "image"
}, {
"type": "text",
"id": "header_title",
"label": "title",
"default": "From problem to solution."
}, {
"type": "text",
"id": "header_desc",
"label": "description",
"default": "A creative and strategic transformation partner for bold businesses."
}, {
"type": "text",
"id": "header_button",
"label": "button text",
"default": "READ MORE"
}
]
}

{% endschema %}

